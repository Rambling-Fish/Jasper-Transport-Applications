<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
   <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
      <layout class="org.apache.log4j.PatternLayout">
        <param name="ConversionPattern" value="%-5p %d [%t] %c %F - %m%n" />
      </layout>
   </appender>
   <appender name="JTALogger" class="org.apache.log4j.RollingFileAppender">
      <param name="File" value="../../../logs/jta-client-metpx-1.1.log"/>
      <param name="MaxFileSize" value="5MB"/>
      <!--  Keep 10 backup files then reuse -->
      <param name="MaxBackupIndex" value="10"/>
      <param name="ImmediateFlush" value="true"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d %p %c (%F:%L) - %m%n" />
      </layout>
   </appender>
   <!-- jasper logging -->
   <logger name="org.jasper" additivity="false">
      <level value="WARN"/>
      <appender-ref ref="stdout"/>
      <appender-ref ref="JTALogger"/>
   </logger>
   <!-- default mule logging -->
   <root>
      <level value="WARN" />
      <appender-ref ref="stdout" />
      <appender-ref ref="JTALogger" />
   </root>
</log4j:configuration>